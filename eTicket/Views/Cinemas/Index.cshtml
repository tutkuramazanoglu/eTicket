@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List Of Cinema";
}

<div class="row">
    <div class="cold-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.LogoURL)</th>
                    <th>@Html.DisplayNameFor(model => model.CinemaName)</th>
                    <th>@Html.DisplayNameFor(model => model.CinemaDescription)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.LogoURL" alt="@item.CinemaName" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CinemaName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CinemaDescription)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
