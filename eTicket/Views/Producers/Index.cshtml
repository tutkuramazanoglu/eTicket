@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List Of Producers";
}

<div class="row">
        <div class="cold-md-8 offset-md-2">

            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.ProducerProfilePictureURL)</th>
                        <th>@Html.DisplayNameFor(model => model.ProducerFullName)</th>
                        <th>@Html.DisplayNameFor(model => model.ProducerBio)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="align-middle">
                                <img class="rounded-circle" src="@item.ProducerProfilePictureURL" alt="@item.ProducerFullName" style="max-width:150px" />
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.ProducerFullName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.ProducerBio)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a> |
                                <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a> |
                                <a class="btn btn-outline-danger"><i class="bi bi-trash">Delete</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
